@if (Model.PlDetailsPartial.PlDetailList != null)
{


        <div style="margin-top:30px">
            <table id="customers" border="0" cellspacing="0" cellpadding="0">
            <thead class="botg">
                <tr>
                        <th>SL#</th>
                        <th>Instrument</th>
                        <th>Bought Quantity</th>
                        <th>Bought Cost</th>
                        <th>Sold Quantity</th>
                        <th>Sold Cost</th>
                        <th>Realised Gain/Loss</th>
                        <th>Balance Quantity</th>
