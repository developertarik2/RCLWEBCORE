                        <th>Market Rate</th>
                        <th>Market Amount</th>
                        <th>Unrealised Gain</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var pl in Model.PlDetailsPartial.PlDetailList)
                {
                    n++;
