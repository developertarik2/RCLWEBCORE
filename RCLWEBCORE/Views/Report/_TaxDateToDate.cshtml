@model RCLWEB.DATA.ViewModels.TaxPartialVM

@if(Model.ClientDetails !=null && Model.TaxDateToDate !=null)
{
    <h2 class="text-primary text-center mt-3">To Whom It May Concern</h2>

    <p>
        This is to certify that <b>Mr./Mrs. @Model.ClientDetails?.Aname</b> Client Code : <b>@Model.ClientDetails?.Acode</b> BO ID: <b>@Model.ClientDetails?.Boid</b>
        has been maintaining an
        Account with our Brokerage House. His/ Her detail information are given bellow:
    </p>

    <h3 class="text-center text-info">Transaction Period: <b>@Model.FromDate.ToString("dd-MMMM-yyyy") To @Model.ToDate.ToString("dd-MMMM-yyyy")</b> </h3>
    <p>Father's/Husband's Name :@Model.ClientDetails?.Faname</p>
    <p>Mother's Name :@Model.ClientDetails?.moname</p>
    <p>Address :@Model.ClientDetails?.Address</p>

    <div class="pb-4">
        <table class="table table-bordered">
            <tbody>
                <tr>
                    <td><b>Opening Equity</b> </td>
                    <td class="font-weight-bold"><b>@Model.TaxDateToDate.OpeningEquity.GetValueOrDefault().ToString("#,##0.00")</b> </td>
                    <td><b>Closing Equity</b> </td>
                    <td><b> @Model.TaxDateToDate.ClosingEquity.GetValueOrDefault().ToString("#,##0.00")</b></td>
                </tr>
                <tr>
                    <td>Deposit During This Period</td>
                    <td>@Model.TaxDateToDate.Deposit.GetValueOrDefault().ToString("#,##0.00")</td>
                    <td>Withdrawal</td>
                    <td>@Model.TaxDateToDate.Withdraw.GetValueOrDefault().ToString("#,##0.00")</td>
                </tr>
                <tr>
                    <td>Securities Deposit</td>
                    <td>@Model.TaxDateToDate.SD.GetValueOrDefault().ToString("#,##0.00")</td>
                    <td>Securities Withdrawal</td>
                    <td>@Model.TaxDateToDate.SW.GetValueOrDefault().ToString("#,##0.00")</td>
                </tr>
                <tr>
                    <td>Charge & Fees</td>
                    <td>@Model.TaxDateToDate.Charge.GetValueOrDefault().ToString("#,##0.00")</td>
                    <td><b>Balance as on (Cr/Dr)</b></td>
                    <td><b>@Model.TaxDateToDate.Balance.GetValueOrDefault().ToString("#,##0.00")</b></td>
                </tr>
                <tr>
                    <td><b>Cost Value of Securites</b></td>
                    <td><b>@Model.TaxDateToDate.CV.GetValueOrDefault().ToString("#,##0.00")</b></td>
                    <td><b>Market Value of Securites</b></td>
                    <td><b>@Model.TaxDateToDate.MVS.GetValueOrDefault().ToString("#,##0.00")</b> </td>
                </tr>
                <tr>
                    <td colspan="3"><b>Realised Capital Gain/Loss</b> </td>
                    <td><b>@Model.TaxDateToDate.RG.GetValueOrDefault().ToString("#,##0.00")</b> </td>

                </tr>
            </tbody>
        </table>
    </div>
    <p>(All figures are in Bangladeshi Taka)</p>
    <div class="mt-3 mb-3 pb-4">
        Signature not required. This is a computer generated Report. error/omission please call RCL call center: +8809606016379 or mail to : rcl@royalcapitalbd.com
    </div>
}
