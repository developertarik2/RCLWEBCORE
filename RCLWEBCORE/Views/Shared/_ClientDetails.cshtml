@model RCLWEB.DATA.ViewModels.ClientDetailsVM

<head>
    @*<link rel="stylesheet" href="~/css/tables.css" asp-append-version="true" />*@
    <link rel="stylesheet" href="~/css/clientDetails.css" asp-append-version="true" />
</head>

<div class="row">
    <div class="col-md-4 ">
        <div class="card bg-c-blue p-4 shadow-lg order-card">
            <div class="card-block">
                <h6 class="m-b-20">Account Holder Name: <span>@Model.Aname</span></h6>
                @*<h2 class="text-right"><i class="fa fa-cart-plus f-left"></i><span>486</span></h2>*@
                <p class="m-b-0">Address:<span class="f-right">@Model.Address</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-4 ">
        <div class="card bg-c-pink p-4 shadow-lg order-card">
            <div class="card-block">
                <h6 class="m-b-20">Father's Name: <span>@Model.Aname</span></h6>
                @*<h2 class="text-right"><i class="fa fa-cart-plus f-left"></i><span>486</span></h2>*@
                <p class="m-b-0">Mother's Name:<span class="f-right">@Model.moname</span></p>
            </div>
        </div>
    </div>
    <div class="col-md-4 ">
        <div class="card bg-c-green p-4 shadow-lg order-card">
            <div class="card-block">
                <h6 class="m-b-20">Account No: <span>@Model.Acode</span></h6>
                @*<h2 class="text-right"><i class="fa fa-cart-plus f-left"></i><span>486</span></h2>*@
                <p class="m-b-0">BOID:<span class="f-right">@Model.Boid</span></p>
            </div>
        </div>
    </div>
</div>
